{
  "plot": {
    "removeAccDC": true,
    "SGWindowVelocity": 20,
    "timeWindow": 2,
    "panelOrder": [ "azi", "scarf", "ele", "vel", "pup", "gyro", "acc" ],
    "streamNames": {
      "azi": "azimuth",
      "ele": "elevation",
      "videoGaze": "gaze point video",
      "gazePoint3D": "3D gaze point",
      "vel": "velocity",
      "pup": "pupil size",
      "pupCentLeft": "left pupil center",
      "pupCentRight": "right pupil center",
      "gyro": "gyroscope",
      "acc": "acceleration",
      "scarf": "coding scarf"
    },
    "lims": {
      "azi": 45,
      "ele": 30,
      "gazePoint3D": 5000,
      "vel": 400,
      "pupCentLeft": 100,
      "pupCentRight": 100,
      "gyro": 150
    },
    "adjustLimsToData": ["gazePoint3D","pupCentLeft","pupCentRight","gyro"],
    "units": {
      "orientation": "deg"
    },
    "type": {
      "orientation": "xyz"
    },
    "lineWidth": 1,
    "scarfHeight": 10
  },
  "VCR": {
    "seekShort": 1,
    "seekLong": 50
  },
  "dataQuality": {
    "windowLength": 300
  },
  "userStreams" : [
    {
      "recomputeOnLoad": false,
      "function": "detPitchRoll",
      "parameters": {
        "fs": 100,
	"sigma": 0.05
        },
      "streams": ["orientation"]
    }
  ],
  "coding": {
    "closePanelAfterCode": true,
    "streams": [
      {
        "type": "handStream",
        "lbl": "analysis interval",
        "locked": false,
        "categories": [ "excluded", null, "included", 20 ]
      },
      {
        "type": "classifier",
        "lbl": "Hessels et al. (2020): slow/fast",
        "locked": false,
        "function": "HesselsEtAl2020",
        "alwaysRecalculate": true,
        "alwaysRecalculateUseDefaultSettings": false,
        "parameters": [
          {
            "name": "thr",
            "label": "start velocity threshold (deg/s)",
            "type": "double",
            "value": 5000.0,
            "range": [ 0, 100000 ],
            "granularity": 0,
            "settable": true
          },
          {
            "name": "counter",
            "label": "maximum number of iterations",
            "type": "int",
            "value": 200
          },
          {
            "name": "minfix",
            "label": "minimum slow phase duration (ms)",
            "type": "double",
            "value": 80,
            "range": [ 0, 10000 ],
            "granularity": 1,
            "settable": true
          },
          {
            "name": "lambda",
            "label": "lambda: slow/fast separation threshold",
            "type": "double",
            "value": 2.5,
            "range": [ 0.1, 10 ],
            "granularity": 0.1,
            "settable": true
          },
          {
            "name": "windowlength",
            "label": "length of moving window (ms)",
            "type": "double",
            "value": 8000,
            "range": [ 0, 36000000 ],
            "granularity": 1,
            "settable": true
          },
          {
            "name": "signal",
            "label": "which signal to run the classifier on",
            "type": "select",
            "value": "video gaze point",
            "values": ["video gaze point", "left gaze vector", "right gaze vector"],
            "settable": true
          }
        ],
        "categories": [ "none", 20, "slow", 4, "fast", 5 ]
      }
    ],
    "colors": [
      [ 230, 25, 75 ],
      [ 60, 180, 75 ],
      [ 255, 225, 25 ],
      [ 0, 130, 200 ],
      [ 245, 130, 48 ],
      [ 145, 30, 180 ],
      [ 70, 240, 240 ],
      [ 240, 50, 230 ],
      [ 210, 245, 60 ],
      [ 250, 190, 190 ],
      [ 0, 128, 128 ],
      [ 230, 190, 255 ],
      [ 170, 110, 40 ],
      [ 255, 250, 200 ],
      [ 128, 0, 0 ],
      [ 170, 255, 195 ],
      [ 128, 128, 0 ],
      [ 255, 215, 180 ],
      [ 0, 0, 128 ],
      [ 128, 128, 128 ]
    ]
  }
}
